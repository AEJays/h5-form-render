.company_check_container {
  position: relative;
  font-size: 28rpx;
}
.company_check_container .top_content {
  background-color: #ffffff;
  width: 100%;
  height: 120px;
  color: #000000;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  justify-items: center;
}
.company_check_container .top_content .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.company_check_container .center_content {
  background-color: #fff;
  padding: 20rpx 0;
}

